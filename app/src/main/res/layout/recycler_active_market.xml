<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainBack"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FBAF8F"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:layout_marginTop="8dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="4dp"
        android:paddingTop="8dp"

        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/rowText"
            android:text="Market: "
            />
        <TextView
            android:id="@+id/tvMarket"
            style="@style/rowAnswer"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Count: "
            style="@style/rowText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvCount"
            style="@style/rowAnswer"
            android:layout_width="50dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="All Count: "
            style="@style/rowText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvAllCount"

            style="@style/rowAnswer"
            android:layout_width="70dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="8dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/rowText"
            android:text="Vol: "
            />
        <TextView
            android:id="@+id/tvVol"
            style="@style/rowAnswer"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Per: "
            style="@style/rowText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvPercent"

            style="@style/rowAnswer"
            android:layout_width="50dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Weight: "
            style="@style/rowText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvWeight"
            android:layout_weight="1"
            style="@style/rowAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="8dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/rowText"
            android:text="Bid Price: "
            />
        <TextView
            android:id="@+id/tvBidPrice"
            style="@style/rowAnswer"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Ask Price: "
            style="@style/rowText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvAskPrice"
            android:layout_weight="1"
            style="@style/rowAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</LinearLayout>